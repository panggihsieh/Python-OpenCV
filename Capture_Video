# 引入影象處理庫OpenCV
import cv2

# 選擇影片檔
cap = cv2.VideoCapture(r'C:\workspace\python\data\video\smile.mp4')

while(True):
    # 從VideoCapture擷取一張影像
    ret, frame = cap.read() 
    
    # 將影像轉換成灰度
    gray = cv2.cvtColor(frame, cv2.COLOR_BGR2GRAY)
    
    # 顯示圖片
    cv2.imshow('frame', gray)
    
    # 若按下 q 鍵則離開迴圈
    if cv2.waitKey(10) & 0xFF == ord('q'):
        break

# 釋放攝影機
cap.release()
